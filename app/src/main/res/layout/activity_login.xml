<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/login_app_title_tv"
        style="@style/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="@string/title" />


    <EditText

        android:id="@+id/login_id_phone_et"
        style="@style/loginBox"
        android:layout_marginBottom="24dp"
        android:hint="전화번호 또는 아이디"
        android:inputType="text" />

    <EditText
        android:id="@+id/login_password_et"
        style="@style/loginBox"
        android:layout_marginBottom="60dp"
        android:hint="패스워드"
        android:inputType="textPassword"/>


    <TextView
        android:id="@+id/login_login_btn"
        style="@style/purpleButton"
        android:layout_marginBottom="8dp"
        android:text="@string/login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="아이디 찾기"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/find_pw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:padding="10dp"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_sign_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>