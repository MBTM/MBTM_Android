<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPwEnterCodeActivity">


    <TextView
        android:id="@+id/first_app_title_entercode_tv"
        style="@style/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_marginBottom="531dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/first_app_sub_title_findpw_entercode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:text="비밀번호 찾기"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_app_title_entercode_tv"

        />



    <TextView
        android:id="@+id/enter_code_entercode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증코드 입력"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#4E4D4D"
        android:textSize="16sp"
        android:layout_marginTop="-80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:id="@+id/linear_entercode_ll"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_code_entercode_tv"

        >

        <EditText

            android:id="@+id/box_one_entercode_et"
            style="@style/loginBox"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginBottom="286dp"
            android:background="#F5F5F5"
            android:layout_marginRight="8dp"
            android:textSize="50dp"
            android:textColor="@color/black"
            />

        <EditText

            android:id="@+id/box_two_entercode_et"
            style="@style/loginBox"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="286dp"
            android:background="#F5F5F5"
            android:textSize="50dp"
            android:textColor="@color/black"
            />

        <EditText

            android:id="@+id/box_three_entercode_et"
            style="@style/loginBox"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginBottom="286dp"
            android:layout_marginRight="8dp"
            android:background="#F5F5F5"
            android:textSize="50dp"
            android:textColor="@color/black"
            />

        <EditText

            android:id="@+id/box_four_entercode_et"
            style="@style/loginBox"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:layout_marginBottom="286dp"
            android:background="#F5F5F5"

            android:textSize="50dp"
            android:textColor="@color/black"

            />





    </LinearLayout>

    <TextView
        android:id="@+id/asking_entercode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증코드가 안왔나요?"
        android:textAlignment="center"

        android:textColor="#4E4D4D"
        android:textSize="12sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/linear_entercode_ll"
        app:layout_constraintTop_toBottomOf="@id/linear_entercode_ll"
        />


    <TextView
        android:id="@+id/reget_entercode_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증코드 다시받기"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/asking_entercode_tv"
        app:layout_constraintTop_toBottomOf="@id/linear_entercode_ll"
        />


    <TextView
        android:id="@+id/get_prove_code_tv"
        android:layout_marginBottom="24dp"
        style="@style/purpleButton"
        android:text="인증코드 받기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />


</androidx.constraintlayout.widget.ConstraintLayout>