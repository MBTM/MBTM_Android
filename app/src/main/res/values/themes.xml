<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MBTM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="appName">
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginBox">
        <item name="android:background">@drawable/background_login_box</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="loginButton">
        <item name="android:background">@drawable/button_login_background</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="findIdButton">
        <item name="android:background">@drawable/button_login_background</item>
        <item name="android:text">@string/sub_title_find_id</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="complete">
        <item name="android:background">@drawable/button_login_background</item>
        <item name="android:text">@string/check</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="goToLogin">
        <item name="android:background">@drawable/button_login_background</item>
        <item name="android:text">@string/go_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="getCode">
        <item name="android:background">@drawable/button_login_background</item>
        <item name="android:text">@string/get_code</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="notCode">
        <item name="android:background">@drawable/background_not_yet</item>
        <item name="android:text">@string/get_code</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>